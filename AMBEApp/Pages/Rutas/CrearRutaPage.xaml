<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMBEApp.Pages.Rutas.CrearRutaPage"
             Title="CrearRuta">

    <ScrollView>
        <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Center" Padding="20">
            <Image Source="ramgarlogo.jpg" HeightRequest="79" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" />

            <StackLayout Spacing="10" BackgroundColor="White" WidthRequest="330">
                <Entry x:Name="TxtRuta" Placeholder="Nombre Ruta" />
                <Entry x:Name="TxtOrigen" Placeholder="Origen" />
                <Entry x:Name="TxtDestino" Placeholder="Destino" />
                <Entry x:Name="TxtDistancia" Placeholder="Distancia" Keyboard="Numeric"/>
                <Entry x:Name="TxtColonias" Placeholder="Colonias" Keyboard="Plain" />
                <Entry x:Name="TxtDepartamento" Placeholder="Departamento" />
                <Entry x:Name="TxtMunicipio" Placeholder="Municipio"  />
                <Entry x:Name="TxtDescripcion" Placeholder="Descripcion" />


                <Button Text="Crear" Clicked="CrearRuta" HorizontalOptions="Center" BackgroundColor="Purple" />
            </StackLayout>
        </FlexLayout>
    </ScrollView>
</ContentPage>