<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMBEApp.Pages.Grados.EditarGradoPage"
             Title="EditarGradoPage">


    <Frame BackgroundColor="White" Padding="10" CornerRadius="10">
        <ScrollView>
            <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Center" Padding="20">
                <Image Source="ramgarlogo.jpg" HeightRequest="79" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" />
                <StackLayout Spacing="10" BackgroundColor="White" WidthRequest="330">
                    <Entry x:Name="TxtNombreGrado"  Placeholder="Nombre Grado" />
                    
                    <Button Text="Editar Grado" Clicked="Editar" HorizontalOptions="Center" BackgroundColor="Purple" ImageSource="save_disk.svg"/>

                </StackLayout>
            </FlexLayout>
        </ScrollView>
    </Frame>
</ContentPage>